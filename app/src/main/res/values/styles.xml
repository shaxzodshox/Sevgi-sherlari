<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="copyToast">
        <item name="stTextBold">true</item>
        <item name="stColorBackground">#94ffab</item>
        <item name="stTextColor">#000</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#000</item>
        <item name="stIconStart">@drawable/copy_black</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">center</item>
        <item name="stRadius">5dp</item>
        <item name="stTextSize">16sp</item>
    </style>

    <style name="favoriteToast">
        <item name="stTextBold">true</item>
        <item name="stColorBackground">#FFC107</item>
        <item name="stTextColor">#000</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#000</item>
        <item name="stIconStart">@drawable/ic_star_black_24dp</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">center</item>
        <item name="stRadius">5dp</item>
        <item name="stTextSize">16sp</item>
    </style>

</resources>
